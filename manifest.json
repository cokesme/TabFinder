{
    "manifest_version": 2,

    "name": "TabFinder",
    "description": "Finding tabs with a ctrl+f like search",
    "version" : "0.1.1",
    "icons": {
        "16": "128_letter.png",
        "48": "128_letter.png",
        "128": "128_letter.png"
    },
    "permissions": ["tabs"],
    "omnibox": {
        "keyword": "tf"
    },

    "offline_enabled": true,

    "browser_action": {
        "default_icon": "64.png",
        "default_popup": "icon.html"
    },

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
}