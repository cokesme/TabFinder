{
    "manifest_version": 2,

    "name": "TabFinder",
    "description": "Finding tabs with a ctrl+f like search",
    "version" : "0.1.2",
    "icons": {
        "16": "128_3.png",
        "48": "128_3.png",
        "128": "128_3.png"
    },
    "permissions": ["tabs"],
    "omnibox": {
        "keyword": "tf"
    },

    "offline_enabled": true,

    "browser_action": {
        "default_icon": {
            "19": "128_3.png",
            "38":"128_3.png"
        },
        "default_popup": "icon.html"
    },
    "commands": {
        "_execute_broswer_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "windows": "Ctrl+Shift+F",
                "mac": "Command+Shift+F",
                "chromeos": "Ctrl+Shift+F",
                "linux": "Ctrl+Shift+F"
            },
        "description": "easy popup"
        }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
}